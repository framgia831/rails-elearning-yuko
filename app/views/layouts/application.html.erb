<!DOCTYPE html>
<html>
    <head>
        <title>RailsElearningYuko</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    </head>

    <body>
        <nav class="navbar navbar-ligh">
            <div class="container">

                <%= link_to "LOGO", root_path, class: 'navbar-brand logout' %>

                <ul class="navbar nav justify-content-end">
                <% if current_user %>
                    <li class="li">
                        <%= link_to "DASHBOARD", dashboard_index_path, class: 'logout' %>
                    </li>
                    <li class="li">
                        <%= link_to "CATEGORY", categories_path, class: 'logout' %>
                    </li>

                    <li class="li">
                        <%= link_to "MEMBERS", users_path, class: 'logout' %>
                    </li>

                    <% if current_user.admin %>
                        <li class="li">
                           <%= link_to "EDIT ALL DATA", admin_categories_path, class: 'logout' %>
                        </li>
                    <% end %>

                    <li class="li dropdown">
                            <%= gravatar_for(current_user, 30) %>
                            <span class="userAct"><%= link_to current_user.name, user_path(current_user), class: 'logout' %></span>
                    </li>

                    <li class="li">
                        <%= link_to "Logout", logout_path , method:"post" , class: 'logout' %>
                    </li>
                <% end %>
                </ul>               
        </div>
        </nav>
   
        <div class="container">
            <% if flash[:notice] %>
             <center><div class="alert alert-success notice">
                <%= flash[:notice] %>
            <% end %>
            </div></center>
        </div>

        <%= yield %>

        <footer class="footer">
                <center><p>Â©All rights reserved.</p></center>
        </footer>

</body>



</html>
