<div class="container">
	<div class="row">
		<div class="col-sm-6">
		<h3 class="list">Users</h3>
		</div>
	</div>
		<% @users.each do |user| %>
		<div class="row box">

			<div class="col-4">
				<span class="pic"><%= gravatar_for(user) %></span>
			</div>
			<div class="col-4 name">
				<b><%= link_to user.name, "users/#{user.id}" %></b>
			</div>
			<div class="col-4 followButton">
				<%= render 'relationships/follow_button',user: user %>
			</div>			
		</div>
		<% end %>		
</div>
