<div class="container">
	<div class="bigBox">
		<center><h3>Add category</h3></center>

			<% @category.errors.full_messages.each do |message| %>
				<div class="alert alert-danger">
					<%= message %>
				</div>
			<% end %>

			<%= form_tag(admin_categories_path) do %>
				<div class="form-group">
					<p>TITLE</p>
						<%= text_field_tag :title, nil, class: 'form-control' %>
				</div>

				<div class="form-group">
					<p>DISCRIPTION</p>
						<%= text_area :disc, nil, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= submit_tag "SUBMIT", class: 'btn btn-primary form-control bo' %>
				</div>

		<% end %>
	</div>
</div>