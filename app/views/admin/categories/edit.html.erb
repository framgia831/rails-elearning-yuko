<div class="container">
	<div class="bigBox">
		<center><h3>Add category</h3></center>

			<% @category.errors.full_messages.each do |message| %>
				<div class="alert alert-danger">
					<%= message %>
				</div>
			<% end %>

			<%= form_tag(admin_category_path, {method: "put"}) do %>
				<div class="form-group">
					<p>TITLE</p>
						<%= text_field_tag :title, @category.title, class: 'form-control' %>
				</div>

				<div class="form-group">
					<p>DESCRIPTION</p>
						<%= text_area_tag :description, @category.description, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= submit_tag "SAVE CATEGORY", class: 'btn btn-primary form-control bo' %>
				</div>

		<% end %>
	</div>
</div>