<div class="container">
  <div class="col-12 clearfix">
      <div class="float-left">
        <div class="card userInfo" style="width: 15rem;">
          <div class="card-header"><center><span class="info">USER INFORMATION</span></center></div>
              <div class="card-body">
                <center>
                  <div class="userImage">
                  <%= gravatar_for(current_user, 100) %>
                </div>
                <div>
                  <h4 class="card-text"><%= current_user.name %></h4>
                  <p class="card-text"><%= current_user.email %></p>
                  <%= link_to "UPDATE PROFILE", edit_user_path(current_user) %>                
                    <div class="button">
                      <% unless current_user %>
                        <%= render 'relationships/follow_button', user:@user %>
                      <% end %>
                    </div>
                </div>
              </center>
            </div>
          </div>
      </div>
       <div class="follower">
          <div class="card" style="width: 40rem">
            <div class="card-header">
              <center><span class="info">WORDS LEARNED</span></center>
            </div>
            <div class="card-body">
              <table class="table">
                <thead>
                  <th>Word</th>
                  <th>Answer</th>
                  <th>Correct Answer</th>
                </thead>      
              <% current_user.lesson_words.each do |lesson_word| %>
                <tbody>
                  <td>          
                    <%= lesson_word.word.content %>
                  </td>
                  <td>
                    <%= lesson_word.word_answer.content %>
                  </td>
                  <td>
                   <%= lesson_word.word.correct_answer.content %>
                  </td>       
                  
                </tbody>

                <% end %>
              </table>

            </div>
          </div>
  </div>
</div>